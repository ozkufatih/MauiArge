<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiApp1.Models"
             x:Class="MauiApp1.Controls.AddAssetControl">
    <FlexLayout>
        <ListView x:Name="CategoryListView" Grid.Row="1" ItemsSource="{Binding Categories}" VerticalOptions="FillAndExpand"
              SelectedItem="{Binding SelectedCategory, Mode=TwoWay}" ItemTapped="ListView_ItemTapped"
              RowHeight="75">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <!--Buraya resim gelecek-->
                        <Label Text="{Binding Name}" TextColor="White" Padding="20" FontSize="25" VerticalOptions="Center"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </FlexLayout>
</ContentView>
